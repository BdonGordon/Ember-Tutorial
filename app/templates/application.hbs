{{!-- The following component displays Ember's default welcome message. --}}

{{!-- Feel free to remove this! --}}
<div class="container">
  <div class="menu">
    {{#link-to "index"}}
    <h1>
      <em>Pegasus Rentals</em>
    </h1>
    {{/link-to}}
    <div class="links">
      {{#link-to "about" class="menu-about"}}
        About
      {{/link-to}}
      {{#link-to "contact" class="menu-contact"}}
        Contact
      {{/link-to}}
    </div>
  </div>

  <div class="body">
    {{!--This tag tells Ember where the content for our current route (about, contact) should be shown --}}
    {{outlet}}
  </div>
</div>